{
  "name": "my-dictionary",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint ./ --ext '.js,.jsx' --max-warnings 0 $LINT_ARGS && echo 'Your code is clear' || (echo 'Please, fix problems'; exit 1)",
    "lint:fix": "LINT_ARGS=--fix npm run lint",
    "lint:with-cache": "LINT_ARGS='--cache --cache-location=.cache/' npm run lint"
  },
  "dependencies": {
    "@material-ui/core": "^1.5.1",
    "@material-ui/icons": "^2.0.3",
    "i": "^0.3.6",
    "moment": "^2.22.2",
    "npm": "^6.4.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-router-dom": "^4.3.1",
    "react-router-prop-types": "^1.0.4",
    "react-scripts": "1.1.4",
    "recompose": "^0.27.1",
    "styled-components": "^4.0.3",
    "styled-normalize": "^8.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.11.1",
    "pre-commit": "^1.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/styles.js",
      "!src/index.js",
      "!src/registerServiceWorker.js"
    ]
  },
  "pre-commit": {
    "run": [
      "lint:with-cache"
    ],
    "silent": true
  }
}
